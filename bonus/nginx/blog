upstream php {
        server wordpress:9000;
}

upstream adminer {
		 server adminer:9000;
}

server {
        listen 443 ssl;
        ## Your website name goes here.
        server_name gtoubol.42paris.fr;
        ssl_certificate /run/secrets/wordpress_crt;
        ssl_certificate_key /run/secrets/wordpress_key;
        ## Your only path reference.
        ## This should be in your http block and if it is, it's not needed here.

        location / {
                 root /var/www/blog;
                 index index.php;
                 try_files $uri $uri/ /index.php?$args;

                 location ~ \.php$ {
                         #NOTE: You should have "cgi.fix_pathinfo = 0;" in php.ini
                         include fastcgi_params;
                         fastcgi_intercept_errors on;
                         fastcgi_pass php;
                         #The following parameter can be also included in fastcgi_params file
                         fastcgi_param  SCRIPT_FILENAME $document_root$fastcgi_script_name;
						  access_log /var/log/nginx/phpfpmonly-access0.log;
                }

                location ~* \.(js|css|png|jpg|jpeg|gif|ico)$ {
                         expires max;
                         log_not_found off;
                }
        }

        location /adminer/ {
                 root     /var/www/;
                 index    adminer.php;
                 try_files $uri/ /adminer/adminer.php$args;

                location ~ \.php {
				fastcgi_split_path_info ^(.+\.php)(/.+)$;
                include fastcgi_params;
                fastcgi_intercept_errors on;
                fastcgi_pass adminer;
                fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
				 access_log /var/log/nginx/phpfpmonly-access.log;
                }
        }
}